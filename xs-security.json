{
  "xsappname": "pp-backendServices-001",
  "tenant-mode": "dedicated",
  "scopes": [
    {
      "name": "$XSAPPNAME.Display",
      "description": "Public access"
    },
    {
      "name": "$XSAPPNAME.SupplierViewer",
      "description": "View suppliers"
    },
    {
      "name": "$XSAPPNAME.SupplierAdmin",
      "description": "Manage suppliers"
    }
  ],
  "role-templates": [
    {
      "name": "DisplayRole",
      "description": "Role for public display",
      "scope-references": [
        "$XSAPPNAME.Display"
      ]
    },
    {
      "name": "SupplierViewer",
      "description": "Can view suppliers",
      "scope-references": [
        "$XSAPPNAME.SupplierViewer"
      ]
    },
    {
      "name": "SupplierAdmin",
      "description": "Can manage suppliers",
      "scope-references": [
        "$XSAPPNAME.SupplierAdmin"
      ]
    }
    
  ],
  "role-collections": [
    {
      "name": "Public",
      "description": "Public role collection",
      "role-template-references": [
        "DisplayRole"
      ],
      "principals": [
        {
          "type": "anonymous"
        }
      ]
    },
    {
      "name": "SupplierAccess",
      "description": "All supplier access roles",
      "role-template-references": [
        "SupplierViewer",
        "SupplierAdmin"
      ]
    }
    
  ]
}
